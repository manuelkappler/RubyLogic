:css
  .link {
    stroke: steelblue;
    fill: none;
    stroke-width: 2px;
    stroke-dasharray: 3, 3;
  }
  .link.non_highlighted {
    stroke: steelblue;
    fill: none;
    stroke-width: 1px;
    stroke-dasharray: 3, 10;
    marker-end: none;
  }
  .link.highlight_from {
    marker-end: url(#highlight);
    stroke-width: 5px;
    stroke: coral;
    stroke-dasharray: 5, 5;
  }
  .link.highlight_to {
    marker-end: url(#highlight);
    stroke-width: 5px;
    stroke: forestgreen;
    stroke-dasharray: 10, 5;
  }
  .link.self_referenced{
    marker-end: none;
  }
  .node circle {
    fill: #2a3;
    stroke: #000;
    stroke-width: 1.5px;
  }

#content.container-fluid
  .page-header 
    %h1 Extension Grapher
  .card.card-outline-primary#input
    .card-block.card-inverse.bg-primary#input_title_block{:data => {:toggle => "collapse", :target => "#collapse_input"}, :aria => {:expanded => "false", :controls => "collapse_input"}}
      .card-title#input_heading
        %h2 Enter the extension (of a binary relation)
    .card-block.collapse.show.no-transition#collapse_input
      .input-group
        %span.input-group-addon#sizing-addon1 Set of tuples
        %input.form-control#extension{:type => "text", :placeholder => "For example: {(a, b), (b, c)...}"}
      .input-group-lg
        %input.btn.btn-primary.btn-block#submit{:type => "submit"}
    .card-block.card-danger.hidden-xl-down#error_display
  .card.card-outline-info.hidden-xl-down#graph
    .card-block.bg-info
      .card-title
        %h2 Graph
    .card-block
      .graph_holder#graph_holder
