%script(src="truthtable.js")

#content.container-fluid
  .page-header 
    %h1 Sentential Logic Truth-Table Generator
  .card.card-outline-primary#input
    .card-block.card-inverse.bg-primary#input_title_block{:data => {:toggle => "collapse", :target => "#collapse_input"}, :aria => {:expanded => "false", :controls => "collapse_input"}}
      .card-title#input_heading
        %h2 Enter sentences
    .card-block.collapse.show.no-transition#collapse_input
      .input-group
        %span.input-group-addon#sizing-addon1 Sentences
        %input.form-control#sentences{:type => "text", :placeholder => "Enter all the sentences you would like to generate a truthtable for, e.g.: A, A -> (B or C), A ↔ (B∨ C)"}
      .input-group-lg
        %input.btn.btn-primary.btn-block#submit{:type => "submit"}
  .card.card-outline-info.hidden-xl-down#truthtablecard
    .card-block.bg-info
      .card-title
        %h2 Truth-Table
    .card-block
      .proof_table.table-responsive
        %table.table-hover.table-sm#truthtable{:style => "width: 100%"}
          %thead.inverse
          %tbody
